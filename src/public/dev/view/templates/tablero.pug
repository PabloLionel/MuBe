.MBForm
  .form.vertical
    h2.title Test Chi-Cuadrado
    form(action='')
      .subtitle Experimento:
      .section
        label(for='modulo') Modulo:
        input(type='number', name='modulo', placeholder='Modulo', required)
        label(for='cant') Cantidad:
        input(type='number', name='cant', placeholder='Cantidad', required)
        label(for='bandera') Bandera:
        input(type='number', name='bandera', placeholder='Bandera', required)
        label Error:
        select(name='error', required)
          each val in ['0.01','0.025','0.05','0.1']
            option(value=val)= val
      .subtitle Iteraciones:
      .section
        label(for='semillas') Cantidad:
        input#semillas(type='number', name='semillas', value='1', min='1', placeholder='Semillas')
        #nsemillas
      a#calRanking(href='', class='button') calcular
      a.resetFormTablero.button() Restablecer
  .preview
    h2.title Vista Previa
    .section
      p {
      p  Modulo: <span id='obserMod'></span>,
      p  Cantidad: <span id='obserCant'></span>,
      p  Bandera: <span id='obserB'></span>,
      p  Error: <span id='obserErr'></span>,
      p  Semillas: <span id='obserSem'></span>
      p }

