.item__contend
  .MBForm
    .form
      form(data-id='inventarioParcial')
        .subtitle Parametros de la Serie a Generar:
        .section
          label(for='modulo') Modulo:
          input.entrante(type='number', name='modulo', placeholder='Modulo', required)
          label(for='cant') Cantidad:
          input.entrante(type='number', name='cant', placeholder='Cantidad', required)
          label.entrante(for='bandera') Bandera:
          input.entrante(type='number', name='bandera', placeholder='Bandera', required)
          label(for='semilla') Semilla:
          input.entrante(type='number', name='semilla', placeholder='semilla', required)
        .subtitle Parametros de Experimentos:
        .section
          .section
            p.full Experimento 1
            label(for='stock') Stock a Analizar:
            input.entrante(type='number', name='stock', placeholder='stock', required)
            p.full corridas
            label(for='pedidos') Cantidades de Puntos de Pedido:
            input.entrante(type='number', name='pedidos', placeholder='Puntos de reposici√≥n', min="0",value="0", required)
            #nPedidos
          .section
            p.full Experimento 2
            label(for='pedido') Punto de Pedido a Analizar:
            input.entrante(type='number', name='pedido', placeholder='Pedido', required)
            p.full corridas
            label(for='stocks') Cantidades de Stocks:
            input.entrante(type='number', name='stocks', placeholder='Stocks', min="0",value="0", required)
            #nStocks
        a.calcular(href='', class='button') calcular
        a.reset(href='', class='button') limpiar
  .tInvPar.clearfix
      .table-basic-invPar
        table
          thead
            tr
              each x in ['Nro. de Articulos Demandados', 'Nro. de dias (frecuencia de las demandas)']
                th= x
          tbody.sencillo
            each val, index in [135, 271, 271, 180, 90, 36, 12, 4, 1]
              tr
                td= index+1
                td= val
      .table-basic-invPar
        table
          thead
            tr
              each x in ['Dias Transcurridos hasta la entrega de los equipos', 'Nro. de veces']
                th= x
          tbody.sencillo
            each val, index in [30, 40, 30]
              tr
                td= index+2
                td= val
